/* pages/search/search.wxss */
.search_warp {
  position: relative;
  height: 100rpx;
  width: 100%;
  background-color: #eeeeee;
  overflow: hidden;
}
.search_warp > view{
  position: relative;
  height: 80rpx;
  width: 80%;
  margin: 10rpx auto;
  background-color: white;
  overflow: hidden;
  border-radius: 10rpx;
}
.search_warp input {
  height: 80rpx;
  width: 80%;
  background-color: transparent;
  padding-left: 1em;
  box-sizing: border-box;
  line-height: 80rpx;
}
.search_warp icon {
  position: absolute;
  left: 20rpx;
  top: 50%;
  transform: translate(0,-50%);
  z-index: 2;
  background-color: transparent;
}
.sort_warp {
  padding: 20rpx 100rpx;
}
.sort_warp > view{
  font-size: 32rpx;
  color: black;
  font-weight: bold;
  line-height: 50rpx;
}
.sort_warp text {
  display: inline-block;
  padding: 10rpx 20rpx;
  background-color: #eeeeee;
  margin: 20rpx 20rpx;
  border-radius: 5rpx;
  font-size: 30rpx;
  line-height:30rpx;
}