/* pages/shop/shop.wxss */
.box {
  background-color: #ffffff;
  padding: 20rpx 0;
  margin-bottom: 100rpx;
}
.shop_item {
  display: flex;
  flex-wrap: nowrap;
  position: relative;
  margin-top: 20rpx;
  align-items: center;
  justify-content: space-around;
  padding: 20rpx;
  box-sizing: border-box;
  width: 100%;
  background-color: #eeeeee;
}
.shop_item .check {
  width: 50rpx;
  height: 50rpx;
}
.shop_item image {
  height: 150rpx;
  width: 100rpx;
  display: block;
}
.shop_conent {
  width: 300rpx;
}
.shop_conent .name {
  font-size: 28rpx;
  line-height: 34rpx;
}
.shop_conent .price {
  color: red;
}
.shop_conent .number{
  display: flex;
  flex-direction: row-reverse;
}
.shop_conent .number view{
  line-height: 90rpx;
}
.shop_conent .number view:last-child, .shop_conent .number view:first-child{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background-color: #eeeeee;
  border: 2rpx solid #bfbfbf;
  text-align: center;
  margin: 20rpx;
  line-height: 50rpx;
}
.shop_footer {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 120rpx;
  align-items: center;
  background-color: #a7a7a7;
}
.shop_footer .left {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  height: 100%;
  margin-left: 20rpx;
}
.shop_footer .right {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  height: 100%;
  margin-right: 20rpx;
}
.shop_footer .right view{
  margin: 0 20rpx;
}